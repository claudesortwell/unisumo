  function radioSelect(choice, span) {
    document.getElementById(choice).checked = true;
    $('#uni-radio-selection').removeClass('radio_checked');
    $('#uni-radio-selection1').removeClass('radio_checked');
    $('#uni-radio-selection2').removeClass('radio_checked');
    $(span).addClass('radio_checked');
  }
</script> -->