<input hidden id="secretIdValue" value="<%= document._id %>"></input>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.5/jspdf.min.js">
</script>

<script>
    var doc = new jsPDF('p','mm',[210, 297]);

    $('#cmd').click(function () {
        var filename = document.getElementById('documentTitle').innerHTML;
        doc.fromHTML($('#docTextArea').html(), 10, 10);
        doc.save(filename + '.pdf'); 
    });

    $('#savebtn').unbind().click(function() {
        $.post('/dashboard/savedoc', {
            docId: document.getElementById('secretIdValue').value,
            docName: document.getElementById('documentTitle').innerText,
            docText: document.getElementById('docTextArea').innerHTML
        })
    });
</script>
