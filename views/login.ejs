<body class="my-login-page">
  <section class="h-100">
    <div class="container h-100">
      <div class="row justify-content-md-center h-100">
        <div class="card-wrapper">
          <div class="brand">
            <img src="/img/svg/logoblack.svg" alt="logo">
          </div>
          <div class="card fat">
            <div class="card-body">
              <h4 class="card-title">Login</h4>
              <% include ./partials/messages %>
              <form method="POST" class="my-login-validation" action="/users/login">
                <div class="form-group">
                  <label for="email">E-Mail Address</label>
                  <input value=""
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="password">Password
                    <a href="forgot.html" class="float-right">
                      Forgot Password?
                    </a>
                  </label>
                  <input type="password"
                  id="password"
                  name="password"
                  class="form-control" data-eye
                  />
                </div>

                <div class="form-group">
                  <div class="custom-checkbox custom-control">
                    <input type="checkbox" name="remember" id="remember" class="custom-control-input">
                    <label for="remember" class="custom-control-label">Remember Me</label>
                  </div>
                </div>

                <div class="form-group m-0">
                  <button type="submit" class="btn btn-primary btn-block">
                    Login
                  </button>
                </div>
                <div class="mt-4 text-center">
                  Don't have an account? <a href="/users/register">Create One</a>
                </div>
              </form>
            </div>
          </div>
          <div class="footer">
            Copyright &copy; 2020 &mdash; Unisumo
          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="/js/my-login.js"></script>
</body>
</div>
</div>